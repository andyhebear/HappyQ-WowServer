<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<Mmose.Server Author="H.Q.Cai" Version="0.0.1.0">
  <Settings>

    <ServerSetting>
      <!--主服务程序是否具有服务日志-->
      <Service>true</Service>
      <!--日志输出的文件名-->
      <LogFile>..\Logs\G.O.S.E.ZoneCluster[Domain名字-ZoneCluster名字].log</LogFile>
      <!--程序是否使用优先使用缓存的程序集-->
      <Cache>true</Cache>
      <!--主服务程序是否启用调试的编译(ture为调试)-->
      <Debug>true</Debug>
      <!--主服务程序的编译出现警告时是否中断编译-->
      <HaltOnWarning>true</HaltOnWarning>
      <!--是否开始对软件进行性能测试和统计-->
      <Profiling>false</Profiling>
      <!--游戏世界的线程数-->
      <WorldThreadCount>5</WorldThreadCount>
    </ServerSetting>

    <NetSetting>

      <!--服务端监听的设置-->

      <!--服务端缓冲池的大小-->
      <ServerCachedSize>3000</ServerCachedSize>
      <!--服务端缓冲数据的大小-->
      <ServerBufferSize>2048</ServerBufferSize>
      <!--服务端管理线程的线程数-->
      <ServerManageThreadPoolSize>1</ServerManageThreadPoolSize>
      <!--服务端发送线程的线程数-->
      <ServerSendThreadPoolSize>1</ServerSendThreadPoolSize>
      <!--服务端接收线程的线程数-->
      <ServerReceiveThreadPoolSize>3</ServerReceiveThreadPoolSize>
      <!--服务端处理线程的线程数-->
      <ServerProcessThreadPoolSize>3</ServerProcessThreadPoolSize>
      <!--服务端最多连接的客户数量-->
      <ServerMaxClients>300</ServerMaxClients>
      <!--服务端在线的最大有效时间,0不检测-->
      <ServerOutTimeInterval>0</ServerOutTimeInterval>

      <!--客户端连接的设置(用于服务端之间的连接)-->

      <!--客户端缓冲池的大小-->
      <ClientCachedSize>120</ClientCachedSize>
      <!--客户端缓冲数据的大小-->
      <ClientBufferSize>2048</ClientBufferSize>
      <!--客户端管理线程的线程数-->
      <ClientManageThreadPoolSize>1</ClientManageThreadPoolSize>
      <!--客户端发送线程的线程数-->
      <ClientSendThreadPoolSize>1</ClientSendThreadPoolSize>
      <!--客户端接收线程的线程数-->
      <ClientReceiveThreadPoolSize>1</ClientReceiveThreadPoolSize>
      <!--客户端处理线程的线程数-->
      <ClientProcessThreadPoolSize>1</ClientProcessThreadPoolSize>
      <!--客户端在线的最大有效时间,0不检测-->
      <ClientOutTimeInterval>0</ClientOutTimeInterval>
    </NetSetting>

  </Settings>
</Mmose.Server>