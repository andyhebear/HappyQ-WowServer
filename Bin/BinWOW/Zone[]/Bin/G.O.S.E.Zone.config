<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<G.O.S.E.Zone Author="H.Q.Cai" Version="0.1">
  <Settings>
    <!--连接至(Zone群组)游戏服务端的地址-->
    <ZoneClusterHost>127.0.0.1</ZoneClusterHost>
    <!--连接至(Zone群组)游戏服务端的端口-->
    <ZoneClusterPort>29000</ZoneClusterPort>
    <!--此Zone服务端监听的游戏服务的地址-->
    <ZoneHost>127.0.0.1</ZoneHost>
    <!--此Zone服务端监听的游戏服务的端口-->
    <ZonePort>29100</ZonePort>
    <!--此Zone服务端的Zone名字-->
    <ZoneName>Zone[ZoneCluster名字-Zone名字]</ZoneName>

    <ServerSetting>
      <!--主服务程序是否具有服务日志-->
      <Service>true</Service>
      <!--日志输出的文件名-->
      <LogFile>..\Logs\G.O.S.E.Zone[ZoneCluster名字-Zone名字].log</LogFile>
      <!--程序是否使用优先使用缓存的程序集-->
      <Cache>true</Cache>
      <!--主服务程序是否启用调试的编译(ture为调试)-->
      <Debug>true</Debug>
      <!--主服务程序的编译出现警告时是否中断编译-->
      <HaltOnWarning>true</HaltOnWarning>
      <!--是否开始对软件进行性能测试和统计-->
      <Profiling>false</Profiling>
      <!--游戏世界的线程数-->
      <WorldThreadCount>5</WorldThreadCount>
    </ServerSetting>
    
    <NetSetting>
      
      <!--服务端监听的设置-->
      
      <!--服务端缓冲池的大小-->
      <SERVER_CACHED_SIZE>3000</SERVER_CACHED_SIZE>
      <!--服务端缓冲数据的大小-->
      <SERVER_BUFFER_SIZE>2048</SERVER_BUFFER_SIZE>
      <!--服务端管理线程的线程数-->
      <SERVER_MANAGE_THREAD_POOL_SIZE>1</SERVER_MANAGE_THREAD_POOL_SIZE>
      <!--服务端发送线程的线程数-->
      <SERVER_SEND_THREAD_POOL_SIZE>1</SERVER_SEND_THREAD_POOL_SIZE>
      <!--服务端接收线程的线程数-->
      <SERVER_RECEIVE_THREAD_POOL_SIZE>3</SERVER_RECEIVE_THREAD_POOL_SIZE>
      <!--服务端处理线程的线程数-->
      <SERVER_PROCESS_THREAD_POOL_SIZE>3</SERVER_PROCESS_THREAD_POOL_SIZE>
      <!--服务端最多连接的客户数量-->
      <SERVER_MAX_CLIENTS>300</SERVER_MAX_CLIENTS>
      <!--服务端在线的最大有效时间,0不检测-->
      <SERVER_OUT_TIME_INTERVAL>0</SERVER_OUT_TIME_INTERVAL>
      
      <!--客户端连接的设置(用于服务端之间的连接)-->
      
      <!--客户端缓冲池的大小-->
      <CLIENT_CACHED_SIZE>120</CLIENT_CACHED_SIZE>
      <!--客户端缓冲数据的大小-->
      <CLIENT_BUFFER_SIZE>2048</CLIENT_BUFFER_SIZE>
      <!--客户端管理线程的线程数-->
      <CLIENT_MANAGE_THREAD_POOL_SIZE>1</CLIENT_MANAGE_THREAD_POOL_SIZE>
      <!--客户端发送线程的线程数-->
      <CLIENT_SEND_THREAD_POOL_SIZE>1</CLIENT_SEND_THREAD_POOL_SIZE>
      <!--客户端接收线程的线程数-->
      <CLIENT_RECEIVE_THREAD_POOL_SIZE>1</CLIENT_RECEIVE_THREAD_POOL_SIZE>
      <!--客户端处理线程的线程数-->
      <CLIENT_PROCESS_THREAD_POOL_SIZE>1</CLIENT_PROCESS_THREAD_POOL_SIZE>
      <!--客户端在线的最大有效时间,0不检测-->
      <CLIENT_OUT_TIME_INTERVAL>0</CLIENT_OUT_TIME_INTERVAL>
    </NetSetting>
  </Settings>
</G.O.S.E.Zone>