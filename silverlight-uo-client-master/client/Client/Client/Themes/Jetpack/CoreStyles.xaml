                        <Border x:Name="InnerShadowDark"
                                Margin="1"
                                BorderBrush="{StaticResource DarkInnerShadowDarkBrush}"
                                BorderThickness="1,1,0,0"
                                CornerRadius="2" />
                        <Border x:Name="InnerShadowLight"
                                Margin="2"
                                BorderBrush="{StaticResource DarkInnerShadowLightBrush}"
                                BorderThickness="1,1,0,0"
                                CornerRadius="1" />
